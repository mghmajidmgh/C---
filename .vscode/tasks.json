{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "g++.exe",
			"args": [
				"--std",
        		"c++17",
				"-fdiagnostics-color=always",
				"${fileDirname}\\main.cpp",
				"${fileDirname}\\cpp\\object.cpp",
				// "-I",
        		// "${fileDirname}\\cpp",
				// "-g",
				// "${fileDirname}\\*.cpp",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\MinGW\\bin\\g++.exe"
		}
	]
}